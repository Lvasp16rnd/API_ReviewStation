generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name String?
  age Int?
  password String?
  reviews Review[]
  isAdmin Boolean @default(false)
  bans    Ban[]
  submittedItems Item[]
}

model Item{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String 
  description String
  genre String?
  releaseYear Int
  type ITEM_TYPE
  metadata Json?
  posterUrl String?
  reviews Review[]
  isApproved Boolean @default(false)
  submittedBy User? @relation(fields: [submittedByUserId], references: [id])
  submittedByUserId String?
}

model Ban{
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @unique
  reason      String 
  adminComment String?
  banDate     DateTime @default(now())
  appealDate  DateTime?
  expiresAt   DateTime // Data de expiração do banimento (90 dias)
  isActive    Boolean  @default(true)
}

enum ITEM_TYPE{
  MOVIE
  BOOK
  GAME
}

model Review{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  rating Int
  text String
  user User @relation(fields: [userId], references: [id])
  userId String
  item Item @relation(fields: [itemId], references: [id])
  itemId String
  createdAt DateTime @default(now())
}
