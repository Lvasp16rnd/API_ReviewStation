generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name String?
  age Int?
  password String
  reviews Review[]
}

model Item{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String 
  description String
  genre String?
  releaseYear Int
  type ITEM_TYPE
  metadata Json?
  reviews Review[]
}

enum ITEM_TYPE{
  MOVIE
  BOOK
  GAME
}

model Review{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  rating Int
  text String
  user User @relation(fields: [userId], references: [id])
  userId String
  item Item @relation(fields: [itemId], references: [id])
  itemId String
  createdAt DateTime @default(now())
}
